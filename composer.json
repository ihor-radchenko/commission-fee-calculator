{
    "name": "ihor-radchenko/commission-fee-calculator",
    "description": "Commission fee calculator",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.3",
        "ext-bcmath": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.3",
        "symfony/console": "^5.2",
        "symfony/dotenv": "^5.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "2.19",
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
